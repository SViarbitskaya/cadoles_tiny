{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_group_new' %}

{% block main %}
    <h1>Create a new group</h1>

    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i>Create group
        </button>
        <a href="{{ path('admin_groups') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> Back to List of groups
        </a>
    {{ form_end(form) }}
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}