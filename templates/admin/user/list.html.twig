{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_users' %}

{% block main %}
    <h1>Users</h1>

    <table class="table table-striped table-middle-aligned table-borderless">
        <thead>
            <tr>
                <th scope="col"><i class="fa fa-envelop" aria-hidden="true"></i>Email</th>
                <th scope="col">Groups</th>
                <th scope="col">Roles</th>
                <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for user in users %}
            <tr>
                <td>{{ user.email }}</td>
                <td>
                    {% for group in user.groups %}
                        <span class="badge bg-secondary">{{ group.name }}</span>
                    {% endfor %}
                </td>
                <td>
                    {% for role in user.roles %}
                        <span class="badge bg-primary">{{ role }}</span>
                    {% endfor %}
                </td>
                <td class="text-right">
                    <div class="item-actions">
                        <a href="{{ path('admin_user_show', {id: user.id}) }}" class="btn btn-sm btn-secondary">
                            <i class="fa fa-eye" aria-hidden="true"></i> show
                        </a>

                        <a href="{{ path('admin_user_edit', {id: user.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> edit
                        </a>
                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">No users found</td>
           </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    <div class="section actions">
        <a href="{{ path('admin_user_new') }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-plus" aria-hidden="true"></i> create user
        </a>
    </div>

    {{ parent() }}

{% endblock %}