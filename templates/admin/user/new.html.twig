    {{ form_start(form) }}
        {{ form_widget(form) }}
        <button type="submit" class="btn btn-primary">
            <i class="fa fa-save" aria-hidden="true"></i>Create User
        </button>
        <a href="{{ path('admin_users') }}" class="btn btn-link">
            <i class="fa fa-list-alt" aria-hidden="true"></i> Back to List of Users
        </a>
    {{ form_end(form) }}
{% endblock %}

