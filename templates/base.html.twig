<!DOCTYPE html>
<html lang="{{ app.request.locale }}">
    <head>
        <meta charset="UTF-8" />
        <meta name="viewport" content="width=device-width, initial-scale=1"/>
        <meta name="view-transition" content="same-origin" />
        <title>{% block title %}Cadoles test application{% endblock %}</title>

        {% block stylesheets %}{% endblock %}
        {% block javascripts %}
            {# {% block importmap %}{{ importmap('app') }}{% endblock %} #}
            <script defer src="https://kit.fontawesome.com/5a377fab5b.js" crossorigin="anonymous"></script>
        {% endblock %}
    </head>

    <body id="{% block body_id %}{% endblock %}">

        {% block header %}
            {% set _route = app.request.get('_route') %}
            <header>
                <nav class="navbar navbar-expand-lg fixed-top navbar-dark bg-primary">
                    <div class="container">
                        <a class="navbar-brand" href="{{ path('homepage') }}">
                            Test Aplication
                        </a>
                        <button class="navbar-toggler collapsed" type="button" data-toggle="collapse" data-target="#appNavbar" aria-controls="appNavbar" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                        </button>

                        <div class="navbar-collapse collapse" id="appNavbar">
                            <ul class="navbar-nav ml-auto">
                                {% block header_navigation_links %}
                                    {% if is_granted('ROLE_ADMIN') %}
                                        <li class="nav-item{{ _route == 'admin_dashboard' ? ' active' : '' }}">
                                            <a class="nav-link" href="{{ path('admin_dashboard') }}">
                                                <i class="fa fa-home" aria-hidden="true"></i> Dashboard
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('admin_users') }}">
                                                <i class="fa fa-lock" aria-hidden="true"></i> Users
                                            </a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link" href="{{ path('admin_groups') }}">
                                                <i class="fa fa-lock" aria-hidden="true"></i> Groups
                                            </a>
                                        </li>
                                    {% endif %}
                                    {% if app.user %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path('app_logout') }}">
                                            <i class="fa fa-lock" aria-hidden="true"></i> Logout
                                        </a>
                                    </li>
                                    {% endif %}
                                </li>
                                {% endblock %}
                            </ul>
                        </div>
                    </div>
                </nav>
            </header>
        {% endblock %}

        <div class="container body-container">
            {% block body %}
                <div class="row">
                    <div id="main" class="col-sm-9">
                        {{ include('default/_flash_messages.html.twig') }}

                        {% block main %}{% endblock %}
                    </div>

                    <div id="sidebar" class="col-sm-3">
                        {% block sidebar %}
                            {# {{ render_esi(controller('Symfony\\Bundle\\FrameworkBundle\\Controller\\TemplateController::templateAction', {
                                'template': 'blog/about.html.twig',
                                'sharedAge': 600,
                                '_locale': app.request.locale
                            })) }} #}
                        {% endblock %}
                    </div>
                </div>
            {% endblock %}
        </div>
    </body>
</html>
